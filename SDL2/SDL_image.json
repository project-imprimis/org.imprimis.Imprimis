{
  "name": "SDL_image",
  "buildsystem": "simple",
  "build-commands": [
  	"./autogen.sh",
	"./configure --prefix=/app",
	"make --jobs 4",
	"make install"
  ],
  "sources": [
    {
      "type": "git",
      "url": "https://github.com/libsdl-org/SDL_image.git",
      "tag": "release-2.0.0"
    }
  ],
  "cleanup": [
    "/include",
    "/lib/cmake",
    "/lib/debug",
    "/lib/pkgconfig",
    "/lib/*.la",
    "/lib/*.a"
  ]
}
